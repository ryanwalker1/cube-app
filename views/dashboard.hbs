<body>
  <div class="container">
    <header>
     <ul>
                <li><img class="logo" src="/images/logo.png"></li>
                <li><a href="/dashboard">Browse</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/create">Add a Cube</a></li>
                <li><a href="/create/accessory">Add Accessory</a></li>
                <li><a href="/users/logout">LOGOUT</a></li>
                
                
            </ul>
    </header>
    <main>
      <h1>Browsing as {{username}}</h1>
      <h1></h1>
<p>Welcome {{username}}</p>
<a class="btn" href="/users/logout">logout</a>
      <form action="" method="">
        <input type="text" class="search" name="search" placeholder="Find a cube...">
        <input type="number" name="from" class="difficulty" placeholder="Difficulty from...">
        <span>-</span>
        <input type="number" name="to" class="difficulty" placeholder="Difficulty to...">
        <input type="submit" value="search">
      </form>
      <br>
      {{#each cube}}
        <div class="cube">
          <img class="cube" src="{{image_url}}">
          <p class="name">{{name}}</p>
          <p><span>Difficulty level:</span>{{level}}</p>
          <a class="btn" href="/details/{{_id}}">Details</a>
        </div>
      
      {{else}}
        <h2> No Cubes found</h2>
      {{/each}}
    </main>
  </div>
  <footer>@Cubicle: Exercise for Express.js and Handlebars</footer>

